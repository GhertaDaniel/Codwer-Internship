<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/StyleSheet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div>
        <div class="container">
            <div class="page-content">

                <div class="margin-bottom">
                    <div class="flex" id="top-bar-div">
                        <div class="flex-1" id="app-title-div">
                            <h1>
                                <i class="fa-solid fa-people-simple"></i>
                                Blog Manager
                            </h1>
                        </div>
                        <div class="flex-1" id="search-box-div">
                            <div class="navbar account-links">
                                <ul>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li>
                                            <a asp-controller="Account" asp-action="Profile">@User.Identity?.Name</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Account" asp-action="Logout">Logout</a>
                                        </li>

                                    }
                                    else
                                    {
                                        @if (ViewBag.CurrentUrl == "~/Account/Register")
                                        {
                                            <li>
                                                <a asp-controller="Account" asp-action="Register" class="nav-active">Register</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a asp-controller="Account" asp-action="Register">Register</a>
                                            </li>
                                        }

                                        @if (ViewBag.CurrentUrl == "~/Account/Login")
                                        {
                                            <li>
                                                <a asp-controller="Account" asp-action="Login" class="nav-active">Login</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a asp-controller="Account" asp-action="Login">Login</a>
                                            </li>
                                        }

                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="navbar mb">

                    <ul>
                        <li>
                            <a asp-controller="Blogs" asp-action="Index">Blogs</a>
                        </li>
                        <li>
                            <a asp-controller="Blogs" asp-action="Create">Create Blog</a>
                        </li>
                    </ul>
                </div>

                <div class="body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
